<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
  <session-factory>
    <property name="connection.username">root</property>
    <property name="connection.password">admin</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/aedificiumdb</property>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="show_sql">true</property>
    

        
        <mapping class="com.aedificium.model.domain.Book"></mapping>
        
        <mapping class="com.aedificium.model.domain.Borrower"></mapping>
        
        <mapping class="com.aedificium.model.domain.Librarian"></mapping>
        
        <mapping class="com.aedificium.model.domain.Checkout"></mapping>

        
    </session-factory>
</hibernate-configuration>

